{
  "name": "@daneroo/qcic-docz",
  "version": "1.0.0",
  "description": "Static front end (docz) for qcic, with status of scrobblecast and im-ted1k",
  "author": "Daniel Lauzon <daniel.lauzon@gmail.com>",
  "homepage": "https://github.com/daneroo/im-qcic#readme",
  "license": "ISC",
  "//publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daneroo/im-qcic.git"
  },
  "bugs": {
    "url": "https://github.com/daneroo/im-qcic/issues"
  },
  "scripts": {
    "fix": "rm -rf package-lock.json node_modules && yarn install",
    "start": "npm run docz:dev",
    "deploy": "npm run build && npm run deploy:now",
    "deploy:now": "cp now.json dist/ && cd dist && now --public && now alias  && now rm --safe --yes docz-qcic",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "testWithAuditLater": "npm run lint && npm audit && npm run unit",
    "test": "npm run lint && npm run unit",
    "lint": "standard",
    "unit": "jest",
    "coverage": "jest --collectCoverageFrom=lib/**.js --coverage ."
  },
  "//webpack not necessary but pinned, waitingfor docz:v0.14": "https://github.com/pedronauck/docz/issues/596",
  "//webpack": "^4.28.4",
  "devDependencies": {
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "jest": "^24.3.1",
    "standard": "^12.0.1"
  },
  "standard": {
    "//parser": "babel-eslint",
    "env": {
      "jest": true
    },
    "ignore": [
      "**/*.jsx"
    ]
  },
  "//jest": {
    "testRegex": "/__tests__/.*|(\\.|/)(test|spec)\\.jsx?$"
  }
}
